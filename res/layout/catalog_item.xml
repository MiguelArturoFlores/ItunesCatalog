<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/catalogListImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="2dp"
        android:background="#000000"
         />

     <TextView
        android:id="@+id/catalogItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_toRightOf="@+id/catalogListImage"
        android:layout_marginLeft="25dp"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textSize="@dimen/title_text"
        />
    
    <TextView
        android:id="@+id/catalogShortDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/catalogListImage"
        android:textSize="@dimen/description_text"
        android:layout_below="@+id/catalogItemName"
         />

</RelativeLayout>